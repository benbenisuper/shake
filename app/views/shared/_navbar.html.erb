<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">


  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "http://cdn.alleywatch.com/wp-content/uploads/2014/02/Shake-Logo.png", style:"width: 100px" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "Venues", venues_path, class: "nav-link" %>
      </li>


      <% if controller_name == "venues" && action_name == "show" %>

        <li class="nav-item">
          <% if policy(@venue).edit? %>
            <%= link_to "Edit venue", edit_venue_path, class: "nav-link" %>
          <% end %>

        </li>

        <li>
          <% if policy(@venue).destroy? %>
            <%= link_to "Delete venue", venue_path(@venue), method: :delete, class: "nav-link" %>
          <% end %>

        </li>

      <% end %>

      <%= render "shared/user_navbar" %>

    </ul>
  </div>
</div>
