<%= simple_form_for [@booking] do |f| %>
  <%= f.input :start, as: :string, required: false, input_html: {class: "datepicker"} %>
  <%= f.input :end, as: :string, required: false, input_html: {class: "datepicker"}  %>
  <%= f.input :venue_id, :as => :hidden, :input_html => { value: @booking.venue.nil? ? 0 : @booking.venue.id } %>
  <% if @booking.venue.nil? %>
    <p class='text-left'>Price per hour: <strong> Data is no longer available.</strong></p>
    <p class='text-left'>Total price:  <strong> N/A </strong></p>
  <% else %>
    <p class='text-left'>Price per hour: <strong><%= @booking.venue.price %> $US</strong></p>
    <p class='text-left'>Total price:  <strong><%= @booking.venue.price * (@booking.end - @booking.start).to_i %> $US</strong></p>
  <% end %>
  <!-- <p class='text-left'>Status:  <strong><%= @status_message %></strong></p> -->
  <div class="d-flex justify-content-between">
    <%= f.submit "Confirm", class:"btn btn-primary" %>
    <%= link_to "cancel", @booking.venue.nil? ? dashboard_path : venue_path(@booking.venue.id), class:"btn btn-danger"%>
  </div>
<% end %>
