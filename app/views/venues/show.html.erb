<div class="">
  <%= render "venue_slides" %>
</div>


<div class="container">
  <h1 class="mt-3" style="font-weight: 900"><%= @venue.name %></h1>
  <p><%= @venue.location %></p>


  <div style="display: flex">

    <div style="display: flex; flex-direction: column; flex-grow: 2;">
      <div class="shadow mb-3 rounded">
        <%= render "show_map" %>
      </div>

      <div class="col shadow p-3 bg-white rounded">
        <h4 class="border-bottom">Venue Details</h4>

        <h5 class="mt-4">Description</h5>
        <%= @venue.description %>

        <h5 class="mt-4">Additional information</h5>
        <strong>Capactiy: </strong><%= @venue.capacity %><br>
        <strong>Internet: </strong><i class="fas fa-wifi"></i><br>
        <strong>Parking: </strong><i class="fas fa-car"></i><br>
        <strong>Other: </strong><i class="fas fa-users"></i>
      </div>


      <div class="col shadow p-3 mt-3 bg-white rounded">
        <h4 class="border-bottom">Reviews</h4>

        <% if @venue.reviews.empty? %>
          There are no ratings for this venue, yet
        <% else %>
          <% @venue.reviews.each do |review| %>
            <% unless review.nil? %>
              <div class="review_card">
                <div style="display: flex; justify-content: space-between">
                  <h4><%= review.title %></h4>
                  <h4><%= ('<i class="fas fa-star"></i>' * review.rating).html_safe %><%= ('<i class="far fa-star"></i>' * (5 - review.rating)).html_safe %></h4>
                </div>
                <p><%= review.comment %></p>
              </div>
            <% end %>
          <% end  %>
        <% end %>
      </div>
    </div>

    <div class="shadow p-3 ml-3 bg-white rounded" >
      <h4>Reserve now!</h4>
      <p>Make your reservation today</p>
      <%= render "bookings/booking_form" %>
    </div>

  </div>

</div>
