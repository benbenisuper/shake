    <%= render "venue_slides" %>
</div>


<div class="container">
  <h1 class="mt-3" style="font-weight: 900"><%= @venue.name %></h1>
  <p><%= @venue.location %></p>


  <div style="display: flex">

    <div style="display: flex; flex-direction: column; flex-grow: 2;">
      <div class="shadow mb-3 rounded">
        <%= render "show_map" %>
      </div>

      <div class="col shadow p-3 bg-white rounded">
        <h4>Venue Details</h4>

        <h5 class="mt-4 border-top">Description</h5>
        <%= @venue.description %>

        <h5 class="mt-4 border-top">Additional information</h5>
        <strong>Capactiy: </strong><%= @venue.capacity %><br>
        <strong>Internet: </strong><i class="fas fa-wifi"></i><br>
        <strong>Parking: </strong><i class="fas fa-car"></i><br>
        <strong>Other: </strong><i class="fas fa-users"></i>
      </div>
    </div>

    <div class="shadow p-3 ml-3 bg-white rounded" >
      <h4>Reserve now!</h4>
      <p>Make your reservation today</p>
      <%= render "bookings/booking_form" %>
    </div>

  </div>

</div>
