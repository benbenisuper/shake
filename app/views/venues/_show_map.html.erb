
<% if @markers.empty? %>
  <div style="width: 100%;
    height: 300px;" class="d-flex justify-content-between align-items-center bg-grey">
    No location provided.
  </div>
<% else %>
  <div
    id="map"
    style="width: 100%;
    height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
<% end %>
